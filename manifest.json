//This file tells Chrome about the extensionâ€™s permissions, background scripts, and content scripts.
{
    "manifest_version": 3,
    "name": "NeuralFlux",
    "version": "1.0",
    "description": "Generate tailored questions from PDFs and articles to enhance reading.",
    "permissions": ["activeTab", "storage", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }